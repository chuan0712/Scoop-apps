name: build

on:
  workflow_dispatch:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  schedule:
    - cron: "0 8 * * 1"

jobs:
  Warp_Chrome:
    runs-on: ubuntu-latest
    steps:
      # æ‹‰å–ä»£ç 
      - uses: actions/checkout@v4

      # è®¾ç½® Python ç¯å¢ƒ
      - uses: actions/setup-python@v4.7.1
        with:
          python-version: '3.10'

      # æ‰“å°é¡¹ç›®ç»“æ„
      - name: Show files
        run: ls -al

      # å®‰è£…ä¾èµ–å¹¶è¿è¡Œè„šæœ¬
      - name: Prepare environment
        run: |
          python3 -m pip install -r requirements.txt
          python3 run.py

      # è®¾ç½® Git èº«ä»½ï¼ˆç”¨äº tagï¼‰
      - name: Configure git user
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"

      # æå–ç‰ˆæœ¬å·å¹¶åˆ›å»º tagï¼ˆå¦‚æœªå­˜åœ¨ï¼‰
      - name: Extract version and create tag
        id: versioning
        run: |
          VERSION=$(echo "${{ env.BUILD_NAME }}" | grep -oP '\d+\.\d+\.\d+\.\d+')
          echo "VERSION=$VERSION"
          echo "VERSION=$VERSION" >> $GITHUB_ENV
          echo "tag_name=$VERSION" >> $GITHUB_OUTPUT

          if git ls-remote --tags origin | grep -q "refs/tags/$VERSION"; then
            echo "âš ï¸ Tag $VERSION already exists. Skipping release step."
            echo "SKIP_RELEASE=true" >> $GITHUB_ENV
          else
            git tag -a "$VERSION" -m "Release $VERSION"
            git push origin "$VERSION"
          fi

      # æ‰“åŒ…ä¸º Chrome.zip
      - name: Create zip archive
        run: |
          cd build/release
          zip -r ../../Chrome.zip *
          cd ../../
          echo "Zip created:"
          ls -al Chrome.zip

      # æ–°å¢æ­¥éª¤ï¼šè®¡ç®— Chrome.zip çš„ MD5 å¹¶å†™å…¥ md5.txt
      - name: Create MD5 checksum file
        run: |
          # ä½¿ç”¨ md5sum è®¡ç®— Chrome.zip çš„ MD5ï¼Œå¹¶å°†ç»“æœé‡å®šå‘åˆ° md5.txt
          md5sum Chrome.zip > md5.txt
          echo "MD5 checksum created:"
          cat md5.txt
          ls -al md5.txt

      # åˆ›å»º GitHub Releaseï¼Œä»…åœ¨ tag ä¸å­˜åœ¨æ—¶æ‰§è¡Œ
      - name: Create GitHub release
        if: env.SKIP_RELEASE != 'true'
        uses: softprops/action-gh-release@v1
        with:
          tag_name: ${{ steps.versioning.outputs.tag_name }}
          name: ${{ env.BUILD_NAME }}
          # ğŸš¨ æ›´æ”¹è¿™é‡Œï¼šåŒæ—¶åŒ…å« Chrome.zip å’Œ md5.txt
          files: |
            Chrome.zip
            md5.txt
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
