    "bin": "sing-box.exe",
    "post_install": [
        "New-Item -ItemType Directory -Path $persist_dir -Force | Out-Null",
        "$items = @('config.json','cache.db','ui')",
        "foreach ($item in $items) {",
        "    $src = Join-Path $dir $item",
        "    $dst = Join-Path $persist_dir $item",
        "    if (Test-Path $src) {",
        "        if (-not (Test-Path $dst)) {",
        "            Move-Item $src $dst -Force",
        "        } else {",
        "            Remove-Item $src -Recurse -Force",
        "        }",
        "    }",
        "    if (-not (Test-Path $src) -and (Test-Path $dst)) {",
        "        if ((Get-Item $dst).PSIsContainer) {",
        "            New-Item -ItemType Junction -Path $src -Target $dst | Out-Null",
        "        } else {",
        "            New-Item -ItemType HardLink -Path $src -Target $dst | Out-Null",
        "        }",
        "    }",
        "}"
    ],
    "persist": [
        "config.json",
        "cache.db",
        "ui"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/SagerNet/sing-box/releases",
        "regex": "/releases/tag/v(([\\d.]+)-([\\w.]+))"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/SagerNet/sing-box/releases/download/v$version/sing-box-$version-windows-amd64.zip",
                "extract_dir": "sing-box-$version-windows-amd64"
            },
            "32bit": {
                "url": "https://github.com/SagerNet/sing-box/releases/download/v$version/sing-box-$version-windows-386.zip",
